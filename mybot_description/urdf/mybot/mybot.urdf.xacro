<?xml version="1.0"?>
<robot xmlns:xacro = "http://www.ros.org/wiki/xacro" name="mybot">
<!-- 基础部分 -->
<xacro:include filename = "$(find mybot_description)/urdf/mybot/base.urdf.xacro"/>
<!-- 传感器部分 -->
<xacro:include filename = "$(find mybot_description)/urdf/mybot/sensor/imu.urdf.xacro"/>
<xacro:include filename = "$(find mybot_description)/urdf/mybot/sensor/camera.urdf.xacro"/>
<xacro:include filename = "$(find mybot_description)/urdf/mybot/sensor/laser.urdf.xacro"/>
<!-- 执行机构部分 -->
<xacro:include filename = "$(find mybot_description)/urdf/mybot/actuator/wheel.urdf.xacro"/>
<xacro:include filename = "$(find mybot_description)/urdf/mybot/actuator/caster.urdf.xacro"/>
<!-- 插件 -->
<xacro:include filename = "$(find mybot_description)/urdf/mybot/plugins/gazebo_control_plugin.xacro"/>
<xacro:include filename = "$(find mybot_description)/urdf/mybot/plugins/gazebo_sensor_plugin.xacro"/>
<xacro:include filename = "$(find mybot_description)/urdf/mybot/mybot.ros2_control.xacro"/>
<!-- 基础参数 -->
<xacro:base_xacro length = "0.12" radius = "0.10"/>
<!-- 传感器参数 -->
<xacro:imu_xacro xyz = "0.0 0.0 0.02"/>
<xacro:camera_xacro xyz = "0.10 0.0 0.075"/>
<xacro:laser_xacro xyz = "0.0 0.0 0.10"/>
<!-- 执行机构参数 -->
<xacro:wheel_xacro wheel_name = "left_wheel" xyz = "0 0.10 -0.06"/>
<xacro:wheel_xacro wheel_name = "right_wheel" xyz = "0 -0.10 -0.06"/>
<xacro:caster_xacro caster_name = "front_caster" xyz = "0.08 0.0 -0.076"/>
<xacro:caster_xacro caster_name = "back_caster" xyz = "-0.08 0.0 -0.076"/>

<xacro:gazebo_control_plugin />
<xacro:gazebo_sensor_plugin />
<!-- <xacro:mybot_ros2_control /> -->

</robot>